<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="#efe9e9"
     >

    <LinearLayout
        android:id="@+id/ll_tab_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#eeeeee"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_tab_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#413634"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/selector_tab_item_message"
            android:paddingBottom="3dp"
            android:paddingTop="6dp"
            android:text="消息"
            android:textColor="@drawable/selector_tab_item_text_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_tab_item_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#413634"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/selector_tab_item_attendance"
            android:paddingBottom="3dp"
            android:paddingTop="6dp"
            android:text="考勤"
            android:textColor="@drawable/selector_tab_item_text_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_tab_item_application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#413634"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/selector_tab_item_application"
            android:paddingBottom="3dp"
            android:paddingTop="6dp"
            android:text="应用"
            android:textColor="@drawable/selector_tab_item_text_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_tab_item_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#413634"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/selector_tab_item_my"
            android:paddingBottom="3dp"
            android:paddingTop="6dp"
            android:text="我"
            android:textColor="@drawable/selector_tab_item_text_color"
            android:textSize="14sp" />
    </LinearLayout>
    
    <!-- 标题 -->
   <LinearLayout 
       android:id="@+id/ll_tab_title"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
	    <TextView
	        android:id="@+id/tv_title"
	        android:background="#FFFFFF"
	        android:textColor="#000000"
	        android:gravity="center"
	        android:paddingBottom="12dp"
	        android:paddingTop="12dp"
	        android:textSize="18sp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="20dp"
	        android:text="消息"
	        android:layout_above="@+id/lv_contacts"
	        android:src="@drawable/ic_iv_title"
	        />   
   </LinearLayout>
   
   
   <RelativeLayout 
       android:id="@+id/rl_tab_check_ins"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
	    <TextView
	        android:id="@+id/tv_title1"
	        android:background="#FFFFFF"
	        android:textColor="#000000"
	        android:gravity="center"
	        android:paddingBottom="12dp"
	        android:paddingTop="12dp"
	        android:textSize="18sp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="20dp"
	        android:text="消息"
	        android:layout_above="@+id/lv_contacts1"
	        android:src="@drawable/ic_iv_title"
	        />   
   </RelativeLayout>
   
   
   <ImageView 
       android:id="@+id/iv_time_display"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       />
   
    
    <ImageView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_tab_menu"
        android:gravity="center"
        android:text="团购"
        android:layout_below="@+id/ll_tab_title"
        android:textSize="36sp" />
    
    <ListView
        android:id="@+id/lv_contacts"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_tab_menu"
        android:layout_below="@+id/ll_tab_title" />

</RelativeLayout>