<resources>

    <style name="TitleBarTextView">
        <item name="android:background">@color/main_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="Form">
        <item name="android:background">@color/form_border_color</item>
        <item name="android:paddingTop">@dimen/form_border_width</item>
        <item name="android:paddingBottom">@dimen/form_border_width</item>
    </style>
    
    <style name="FormWidget">
         <item name="android:background">@color/white</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">@dimen/padding_tiny</item>
        <item name="android:paddingRight">@dimen/padding_tiny</item>
        <item name="android:textColor">@color/text_color_default</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="FormWidget.TextView">
    </style>

    <style name="FormWidget.EditText">
    </style>
    
    <style name="SubmitButton">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:minHeight">@dimen/none</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>